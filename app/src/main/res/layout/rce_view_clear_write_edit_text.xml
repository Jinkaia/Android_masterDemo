<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_48"
    android:gravity="center_vertical"
    android:orientation="vertical"

    >


    <TextView
        android:id="@+id/cwt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/color_normal_text"
        android:textSize="16sp"
        tools:text="手机号" />

    <EditText
        android:id="@+id/cwt_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_83"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_toLeftOf="@+id/cwt_clear"
        android:layout_toStartOf="@+id/cwt_clear"
        android:background="@null"
        android:textSize="@dimen/dp_16"
        tools:text="13810959999" />

    <ImageView
        android:id="@+id/cwt_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/dp_12"
        android:src="@mipmap/rce_ic_delete_gray"
        android:visibility="gone"
        tools:visibility="visible" />

    <View
        android:id="@+id/cwt_underline"
        style="@style/rce_horizontal_light_thin_divider"
        android:layout_alignParentBottom="true" />

    <View
        android:id="@+id/cwt_underline_focus"
        style="@style/rce_horizontal_primary_thin_divider"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />
</RelativeLayout>
