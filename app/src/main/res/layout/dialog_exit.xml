<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/relayout_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_usercontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="年龄" />

        <TextView
            android:id="@+id/tv_userfinish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:text="取消" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <come.jk.cn.utils.EasyPickerView
            android:id="@+id/picker_money"
            android:layout_width="141.5dp"
            android:layout_height="159dp"
            android:layout_marginStart="46dp"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="26dp"
            app:epvRecycleMode="false"
            app:epvTextColor="@color/gray"
            app:epvTextMaxScale="1.18"
            app:epvTextMinAlpha="0.5"
            app:epvTextPadding="32dp"
            app:epvTextSize="19sp"
            app:layout_constraintStart_toStartOf="parent" />
    </RelativeLayout>

</LinearLayout>
